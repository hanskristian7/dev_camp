<!DOCTYPE html>
<html>
  <head>
    <title>DevcampPortfolio | <%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= nav_authentication_helper %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> 
    <%= yield %>
    <%= render 'shared/navbar', location: 'bottom' %>
    <%= source_helper("blog") %>
  </body>
</html>
