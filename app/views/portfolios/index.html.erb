<h1>Portfolios</h1>
<%= link_to 'Create Portfolio', new_portfolio_path %>

<% @portfolios.each do |portfolio| %>
    <p><%= portfolio.title %></p>
    <p><%= portfolio.subtitle %></p>
    <p><%= portfolio.body %></p>
    <p><%= image_tag portfolio.thumb_image %></p>
    <%= link_to 'Edit Portfolio', edit_portfolio_path(portfolio) %>
    <%= link_to 'View Portfolio', portfolio_path(portfolio) %>
    <%= link_to 'Delete Portfolio', portfolio_path(portfolio), method: :DELETE, data: {confirm: "Are you sure?"} %>
<% end %>
