<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: "Attention!", time: 3000)  %>
<% elsif flash[:error]  %>
    <%= js add_gritter(flash[:error], title: "Attention!", time: 3000) %>
<% else %>
    <%= js add_gritter(flash[:notice], title: "Attention!", time: 3000) %>
<% end %>